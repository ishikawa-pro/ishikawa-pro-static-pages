---
import '@fontsource/prompt/400.css';
import '@fontsource/prompt/700.css';
import '../styles/global.css';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
	<head prefix='og: https://www.ishikawa-pro.dev/ns# fb: https://www.ishikawa-pro.dev/ns/fb# website: https://www.ishikawa-pro.dev/ns/website#'>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<!-- og -->		
		<meta property="og:locale" content="ja_JP">
		<meta property="og:type" content="website">
		<meta property="og:site_name" content="ishikawa-pro">
		<meta property="og:title" content="ishikawa-pro's Portfolio">
		<meta property="og:description" content="バックエンドエンジニアishikawa-proのポートフォリオサイトです。">
		<meta property="og:image" content="https://www.ishikawa-pro.dev/ogp.png">
		<meta property="og:url" content="https://www.ishikawa-pro.dev/link/"> 
		<!-- Twitter -->
		<meta name="twitter:card" content="summary" />
		<meta property="twitter:site" content="@ishikawa__pro" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	body { 
		margin: 0px;
		background-color: #111520;
		font-family: "Prompt", sans-serif;
	}
</style>
