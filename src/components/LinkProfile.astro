---
export interface Props {
	name: string;
	jobTitle: string;
    heroImageLink: string;
}

const { name, jobTitle, heroImageLink } = Astro.props;
---
<div class='link-profile'>
    <img src={heroImageLink} class="profile-background-image">
    <div class="gradient-overlay"></div>
    <div class="link-profile-title">
        <p class='link-profile-name'>{name}</p>
        <p class='link-profile-job-title'>{jobTitle}</p>
    </div>
</div>
<style>
    .link-profile {
        position: relative;
        display: inline-block;
    }
    .profile-background-image {
        display: block;
        width: 100%;
        height: auto;
    }
    .gradient-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 74%;
        background-image: linear-gradient(0deg, rgba(17,21,32,1), rgba(17,21,32,0));
    }
    .link-profile-title {
        position: absolute;
        bottom: 32px;
        left: 24px;
        width: calc(100% - 24px);
    }
    .link-profile-name {
        font-size: 32px;
        font-weight: 700;
        margin: 0 0 2px 0;
        letter-spacing: 1px;
        color: #ffffff;
    }
    .link-profile-job-title {
        font-size: 12px;
        margin: 0;
        font-weight: bold;
        color: #ffffff;
    }
</style>