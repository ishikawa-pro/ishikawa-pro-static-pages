---
export interface Props {
	title: string;
	iconPath: string;
	href: string;
}

const { title, iconPath, href } = Astro.props;
---

<li class="link-sns-card">
	<a href={href}>
		<img src={iconPath}/>
		<div class='link-sns-card-title'>
			{title}
		</div>
	</a>
</li>
<style>
	.link-sns-card {
		list-style: none;
		background-color: #242B40;
		border-radius: 8px;
		margin-bottom: 12px;
	}
	.link-sns-card > a {
		display: flex;
		width: 100%;
		text-decoration: none;
		color: #FFFFFF;
	}
	img {
		margin: 12px;
		width: 44px;
	}
	.link-sns-card-title {
		margin: 24px 12px;
		width: 100%;
		font-size: 14px;
		font-weight: bold;
		letter-spacing: 1px;
	}
	.link-sns-card:is(:hover, :focus-within) {
		background-position: 0;
		background-color: #3C4869;
	}
	.link-sns-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
